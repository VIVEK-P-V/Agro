generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model Crop {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  name      String
  type      String
  image     String?
  stages    FarmingStage[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FarmingStage {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  cropId      String   @db.ObjectId
  crop        Crop     @relation(fields: [cropId], references: [id])
  inputs      Json     // Array of input objects
  alerts      Json?    // Array of alert objects
}
